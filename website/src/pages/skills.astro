[...tier1, ...tier2, ...categorySkills, ...experimental].forEach(s => allSkillNames.add(s.name));
tier3Categories.forEach(c => c.skills.forEach(s => allSkillNames.add(s.name)));
tier4Categories.forEach(c => c.skills.forEach(s => allSkillNames.add(s.name)));
const totalCount = allSkillNames.size;
---

<Base title="Skills" activeNav="skills" description={`${totalCount} structured reasoning skills for Claude Code.`}>
  <div class="page-header">
    <h1>Skills</h1>
  </div>

  <section class="skill-cloud">
    {[...categorySkills, ...experimental, ...tier1, ...tier2,
      ...tier3Categories.flatMap(c => c.skills),
      ...tier4Categories.flatMap(c => c.skills)
    ].map(s => (
      <a href={`/skills/${s.name}`} class="skill-chip">{s.name}</a>
    ))}
  </section>
</Base>

<style>
  .skill-cloud {
    display: flex;
    flex-wrap: wrap;
    gap: var(--sp-2);
    max-width: 100%;
  }

  .skill-chip {
    display: inline-block;
    padding: 0.4em 0.8em;
    border: 1px solid var(--color-border-light);
    border-radius: 4px;
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    text-decoration: none;
    color: var(--color-text);
    background: var(--color-surface);
    transition: background var(--transition), border-color var(--transition);
  }

  .skill-chip:hover {
    background: var(--color-accent);
    border-color: var(--color-accent);
    color: #fff;
    text-decoration: none;
  }
</style>
