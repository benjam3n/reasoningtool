---
import { ViewTransitions } from 'astro:transitions';
import Paginated from '../components/Paginated.astro';
import '../styles/global.css';
---

<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="description" content="Go to the reasoningtool GitHub repository." />
  <title>GitHub â€” reasoningtool</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <ViewTransitions />
</head>
<body>
  <Paginated>
    <section class="github-page">
      <a id="github-go" href="https://github.com/benjam3n/reasoningtool" class="github-link" target="_blank" rel="noopener">Go to GitHub</a>
    </section>
  </Paginated>
</body>
</html>

<script>
  document.addEventListener('astro:page-load', () => {
    const link = document.getElementById('github-go') as HTMLAnchorElement;
    if (!link) return;
    const params = new URLSearchParams(window.location.search);
    const url = params.get('url');
    if (url && url.startsWith('https://github.com/benjam3n/reasoningtool')) {
      link.href = url;
    }
  });
</script>

<style>
  .github-page {
    display: flex !important;
    align-items: center;
    justify-content: center;
  }

  .github-link {
    display: inline-block;
    padding: 0.6em 1.4em;
    border: 1px solid var(--color-accent);
    border-radius: 4px;
    font-family: var(--font-sans);
    font-size: var(--text-lg);
    font-weight: 500;
    text-decoration: none;
    color: var(--color-accent);
    background: var(--color-accent-subtle);
    transition: background var(--transition), color var(--transition);
  }

  .github-link:hover {
    background: var(--color-accent);
    color: #fff;
  }
</style>
