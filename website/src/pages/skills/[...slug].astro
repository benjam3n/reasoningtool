---
import { getCollection, render } from 'astro:content';
import Base from '../../layouts/Base.astro';

export async function getStaticPaths() {
  const skills = await getCollection('skills');
  return skills.map((skill) => {
    // ID is like "space_enumeration/SKILL" â€” extract the directory name
    const name = skill.id.replace(/\/SKILL$/i, '').replace(/\/skill$/i, '');
    return {
      params: { slug: name },
      props: { skill, name },
    };
  });
}

const { skill, name } = Astro.props;
const { Content } = await render(skill);

// Determine tier from the skills data on the skills page
const tier1Names = ['se', 'aex', 'cmp', 'ht', 'dcp', 'dcm', 'rca', 'dd', 'mv', 'ins', 'cba', 'gu'];
const tier2Names = ['pv', 'ai', 'to', 'cda', 'ma', 'sya', 'br', 'prm', 'fla', 'poa', 'ifss', 'rci', 'la', 'vbo', 'val'];
const expNames = ['araw', 'uaua', 'gosm'];

let tier = 'Tier 4';
let tierClass = 'tier-4';
if (expNames.includes(name)) { tier = 'Experimental'; tierClass = 'tier-exp'; }
else if (tier1Names.includes(name)) { tier = 'Tier 1'; tierClass = 'tier-1'; }
else if (tier2Names.includes(name)) { tier = 'Tier 2'; tierClass = 'tier-2'; }
---

<Base title={skill.data.name} activeNav="skills" description={skill.data.description}>
  <div class="skill-page">
    <nav class="skill-breadcrumb">
      <a href="/skills">Skills</a>
      <span class="skill-breadcrumb__sep">/</span>
      <span>{skill.data.name}</span>
    </nav>

    <div class="skill-page__header">
      <span class:list={['tier-badge', tierClass]}>{tier}</span>
      <h1><code>{skill.data.name}</code></h1>
      <p class="skill-page__desc">{skill.data.description}</p>
    </div>

    <div class="skill-page__usage callout">
      <p><strong>Usage in Claude Code:</strong> <code>/{skill.data.name} your question here</code></p>
    </div>

    <article class="skill-page__content">
      <Content />
    </article>

    <nav class="skill-page__back">
      <a href="/skills">&larr; All skills</a>
    </nav>
  </div>
</Base>

<style>
  .skill-breadcrumb {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    margin-bottom: var(--sp-4);
    padding-top: var(--sp-4);
  }
  .skill-breadcrumb a {
    color: var(--color-text-muted);
  }
  .skill-breadcrumb a:hover {
    color: var(--color-accent);
  }
  .skill-breadcrumb__sep {
    margin: 0 0.4em;
    opacity: 0.4;
  }

  .skill-page__header {
    margin-bottom: var(--sp-5);
  }
  .skill-page__header .tier-badge {
    margin-bottom: var(--sp-2);
  }
  .skill-page__header h1 {
    font-size: var(--text-2xl);
    margin-bottom: var(--sp-2);
  }
  .skill-page__header h1 code {
    background: none;
    padding: 0;
    font-size: inherit;
    color: inherit;
  }
  .skill-page__desc {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    line-height: 1.6;
  }

  .skill-page__usage {
    margin-bottom: var(--sp-6);
  }

  .skill-page__content {
    line-height: 1.65;
  }
  .skill-page__content :global(h1) {
    display: none; /* hide duplicate title from SKILL.md content */
  }
  .skill-page__content :global(h2) {
    font-size: var(--text-xl);
    margin-top: var(--sp-7);
    margin-bottom: var(--sp-3);
  }
  .skill-page__content :global(h3) {
    font-size: var(--text-lg);
    margin-top: var(--sp-5);
    margin-bottom: var(--sp-2);
  }
  .skill-page__content :global(table) {
    font-size: var(--text-sm);
  }

  .skill-page__back {
    margin-top: var(--sp-7);
    padding-top: var(--sp-5);
    border-top: 1px solid var(--color-border);
  }
</style>
